/// Imports
use suit/internal as internal
use std/option for Option

/// Represents `Test` type
pub type Test(function: fn()) {
    /// Test name
    pub name: string = internal.function_name(function)

    /// Function to run
    function: fn() = function

    /// Runs `Test`
    pub fn run(): Option =
        internal.try(self.function)

    /// Gets function passed to the `Test`
    pub fn get_function(): fn() =
        self.function
}
